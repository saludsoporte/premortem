      <%# link_to  raw("#{image_tag("list-task.svg")} Generar Correspondencia"), relaciones_path,class: :"sin_adorno"%>
      
      <%# if current_user.oficialia %>
        <%# link_to  raw("#{image_tag("oficialia.png",size:"20x20")} Oficialia"), relacion_oficials_path,class: :"sin_adorno"%>
      
