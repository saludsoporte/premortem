<div class="container bg-white">
  <%= link_to "Regresar",home_administracion_path,class: :"btn btn-sm btn-secondary"%>
  <table class=" table table-bordered">
    <thead>
      <tr>
        <th colspan="4" class="table-dark">Datos Personales</th>
      </tr>
    </thead>
    <tbody>
      <tr>
        <td class="table-dark"><strong>Nombre Completo:</strong></td>
        <td><%= @datos_personal.nombre %></td>
        <td><%= @datos_personal.apellido_paterno %></td>
        <td><%= @datos_personal.apellido_materno %></td>
      </tr>
      <tr>
        <td class="table-dark"><strong>Titulo:</strong></td>
        <td colspan="3"><%= @datos_personal.titulo %></td>
      </tr>
      <tr>
        <td class="table-dark"><strong>Puesto:</strong></td>
        <td colspan="3"><%= @datos_personal.puesto %></td>
      </tr>
      <tr>
        <td class="table-dark"><strong>CURP:</strong></td>
        <td colspan="3"><%= @datos_personal.curp %></td>
      </tr>
      <tr>
        <td class="table-dark"><strong>Correo:</strong></td>
        <td colspan="3"><%= @datos_personal.correo %></td>
      </tr>
      <tr>
        <td class="table-dark"><strong>Carta de Confidencialidad:</strong></td>
        <td colspan="3">          
          <% if @datos_personal.carta.attached? %>
            <p class="form-control">
              <strong>Archivo adjunto:</strong>
              <% if @datos_personal.carta.image? %>
                <%= link_to rails_blob_path(@datos_personal.carta, disposition: "attachment") do %>
                  <%= image_tag @datos_personal.carta,width:200 %>
                <% end %>
              <% else %>
                <%= link_to @datos_personal.carta.filename, url_for(@datos_personal.carta),target: :"_blanck",class: :"message-file"%>
              <% end %>
            </p>
          <% end %>
        </td>
      </tr>
    </tbody>
  </table>
</div>