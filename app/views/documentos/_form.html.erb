<%= form_with(model: documento) do |f| %>
  <% if documento.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(documento.errors.count, "errores") %> Lo siguientes datos no pueden estar vacios </h2>

      <ul>
        <% documento.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <div class="hstack  gap-3">
    <b><%= f.label :"Fecha de Recepción",id:"fr" %></b>
    <%= f.date_field :fecha_recepcion ,class: "form-control" %>
    <b><%= f.label :"Fecha de Disposición",id:"fd" %></b>
    <%= f.date_field :fecha_disp ,class: "form-control" %>
    <%= f.label :"Fecha de Conclusión",id:"fc" %>
    <%= f.date_field :fecha_conclucion ,class: "form-control" %>
  </div><br>
  <!-- asuntos juridicos AJ  oficialia R1/3-->
  <div class="hstack gap-3">
    <b><%= f.label :"Nombre Paciente",id:"nom" %></b>
    <%= f.text_field :nombre_paciente ,class: "form-control" %>
    <b><%= f.label :"Apellido Paterno",id:"ap" %></b>
    <%= f.text_field :apellido_p_paterno ,class: "form-control" %>
    <b><%= f.label :"Apellido Materno",id:"am" %></b>
    <%= f.text_field :apellido_m_paterno ,class: "form-control" %>
  </div>
  <br>
  <div class="hstack gap-3">
    <b><%= f.label :"Nombre de Notario",id:"not" %></b>
    <%= f.text_field :nombre_notario ,class: "form-control" %>
    <b><%= f.label :"Apellido Paterno de Notario",id:"not" %></b>
    <%= f.text_field :apellido_p_notario ,class: "form-control" %>
    <b><%= f.label :"Apellido Materno de Notario",id:"not" %></b>
    <%= f.text_field :apellido_m_notario ,class: "form-control" %>
  </div>
  <div class="hstack  gap-3">
    <b><%= f.label :"Número de Memo",id:"nm" %></b>
    <%= f.text_field :no_memo ,class: "form-control" %>
    <b><%= f.label :"Número de Libro",id:"nl" %></b>
    <%= f.text_field :no_libro ,class: "form-control" %>
  </div><br>
  <div class="hstack gap-3">
        <%= f.label :"Areas",id:"ar" %>        
        <%= f.select(:area_id, Area.all.collect{|a| [a.nombre, a.id] }) %>
        </div><br>
       
        <div class="hstack gap-3">
          <%= f.label :"Número de Notaría",id:"nn"   %>        
        <%= f.text_field :no_notaria ,class: "form-control" %>
        <%= f.label :"Número de Oficio de Conclusión",id:"noc" %>        
        <%= f.text_field :no_oficio_de_conclucion ,class: "form-control" %>
        </div><br>
        <div class="hstack gap-3">      
        
        <%= f.label :"Archivo Escaneado",id:"ac" %>        
        <%= f.file_field :archivo ,class: "form-control" %>
        </div><br>  
        <div class="hstack gap-3">
          <%= f.label :"Responsable del Paciente"%>
          <%= f.text_field :responsable_de_paciente ,class: "form-control"  %>
          <%= f.label :"Observaciones"%>        
          <%= f.text_area :observaciones ,class: "form-control"  %>        
        </div><br>
        <%= f.submit "Guardar Documento" ,class: :"btn btn-sm btn-success"%>
<% end %>
